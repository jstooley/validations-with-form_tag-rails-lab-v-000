<h2>Create an Post</h2>
<%= form_tag posts_path, method: "post" do %>
  <div class="field">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title" %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number" %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
